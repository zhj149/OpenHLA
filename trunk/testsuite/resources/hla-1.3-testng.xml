<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="OHLA HLA 1.3 Testsuite" parallel="false" verbose="5">
  <test name="HLA 1.3 - Federation Management">
    <classes>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.federation.CreationTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.federation.JoiningTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.federation.SynchronizationTestNG"/>
    </classes>
  </test>
  <test name="HLA 1.3 - Declaration Management">
    <classes>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.declaration.ObjectDeclarationTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.declaration.InteractionDeclarationTestNG"/>
    </classes>
  </test>
  <test name="HLA 1.3 - Object Management">
    <classes>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.object.ObjectRegistrationTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.object.ObjectUpdateTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.object.ObjectDeletionTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.object.InteractionTestNG"/>
    </classes>
  </test>
  <test name="HLA 1.3 - Data Distribution Management">
    <classes>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.datadistribution.RegionSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.datadistribution.ObjectRegionTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.datadistribution.InteractionRegionTestNG"/>
    </classes>
  </test>
  <test name="IEEE 1516e - Support Services">
    <classes>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.FederateSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.OrderSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.TransportationSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.ObjectSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.InteractionSupportTestNG"/>
      <class name="net.sf.ohla.rti.testsuite.hla.rti.support.RoutingSpaceSupportTestNG"/>
    </classes>
  </test>
</suite>
